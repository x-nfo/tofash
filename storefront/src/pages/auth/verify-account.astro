---
/**
 * Verify Account Page
 * Account verification page with token-based verification
 */

import BaseLayout from "../../layouts/BaseLayout.astro";
import { verifyAccount } from "../../stores/auth";
import { showSuccessToast, showErrorToast } from "../../lib/toast";

// Get token from URL query params
const url = new URL(Astro.request.url);
const token = url.searchParams.get("token") || "";
---

<BaseLayout title="Verify Account - Tofash">
    <div
        class="min-h-screen flex flex-col justify-center py-12 sm:px-6 lg:px-8 bg-gray-50"
    >
        <div class="sm:mx-auto sm:w-full sm:max-w-md">
            <div class="text-center">
                <div
                    class="mx-auto h-16 w-16 bg-indigo-100 rounded-full flex items-center justify-center mb-4"
                >
                    <svg
                        class="h-8 w-8 text-indigo-600"
                        fill="none"
                        viewBox="0 0 24 24"
                        stroke="currentColor"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"
                        ></path>
                    </svg>
                </div>
                <h1 class="text-3xl font-bold text-gray-900">
                    Verify Your Account
                </h1>
                <p class="mt-2 text-sm text-gray-600">
                    Please verify your email address to activate your account
                </p>
            </div>
        </div>

        <div class="mt-8 sm:mx-auto sm:w-full sm:max-w-md">
            <div class="bg-white py-8 px-4 shadow sm:rounded-lg sm:px-10">
                {
                    token ? (
                        <div id="auto-verify-section">
                            <div class="text-center mb-6">
                                <p class="text-sm text-gray-600">
                                    We're verifying your account...
                                </p>
                            </div>
                            <div class="flex justify-center">
                                <svg
                                    class="animate-spin h-8 w-8 text-indigo-600"
                                    xmlns="http://www.w3.org/2000/svg"
                                    fill="none"
                                    viewBox="0 0 24 24"
                                >
                                    <circle
                                        class="opacity-25"
                                        cx="12"
                                        cy="12"
                                        r="10"
                                        stroke="currentColor"
                                        stroke-width="4"
                                    />
                                    <path
                                        class="opacity-75"
                                        fill="currentColor"
                                        d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"
                                    />
                                </svg>
                            </div>
                        </div>
                    ) : (
                        <form id="verify-form" class="space-y-6">
                            <div>
                                <label
                                    for="token"
                                    class="block text-sm font-medium text-gray-700 mb-1"
                                >
                                    Verification Token
                                </label>
                                <input
                                    type="text"
                                    id="token"
                                    name="token"
                                    required
                                    placeholder="Enter your verification token"
                                    class="appearance-none block w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm transition-colors"
                                />
                                <p class="mt-2 text-sm text-gray-500">
                                    Enter the verification token from your email
                                </p>
                            </div>

                            <div>
                                <button
                                    type="submit"
                                    id="submit-btn"
                                    class="w-full flex justify-center py-3 px-4 border border-transparent rounded-lg shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 disabled:opacity-50 disabled:cursor-not-allowed transition-all duration-200"
                                >
                                    <span id="btn-text">Verify Account</span>
                                    <svg
                                        id="loading-spinner"
                                        class="animate-spin ml-2 h-5 w-5 text-white hidden"
                                        xmlns="http://www.w3.org/2000/svg"
                                        fill="none"
                                        viewBox="0 0 24 24"
                                    >
                                        <circle
                                            class="opacity-25"
                                            cx="12"
                                            cy="12"
                                            r="10"
                                            stroke="currentColor"
                                            stroke-width="4"
                                        />
                                        <path
                                            class="opacity-75"
                                            fill="currentColor"
                                            d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"
                                        />
                                    </svg>
                                </button>
                            </div>
                        </form>
                    )
                }

                <div class="mt-6 text-center text-sm text-gray-600">
                    Already verified?
                    <a
                        href="/auth/signin"
                        class="font-medium text-indigo-600 hover:text-indigo-500 transition-colors"
                    >
                        Sign in
                    </a>
                </div>
            </div>
        </div>
    </div>
</BaseLayout>

<script>
    import { verifyAccount } from "../../stores/auth";
    import { showSuccessToast, showErrorToast } from "../../lib/toast";

    const token = Astro.props.token || "";
    const autoVerifySection = document.getElementById("auto-verify-section");
    const verifyForm = document.getElementById(
        "verify-form",
    ) as HTMLFormElement;
    const tokenInput = document.getElementById("token") as HTMLInputElement;
    const submitBtn = document.getElementById(
        "submit-btn",
    ) as HTMLButtonElement;
    const btnText = document.getElementById("btn-text") as HTMLSpanElement;
    const loadingSpinner = document.getElementById(
        "loading-spinner",
    ) as unknown as SVGElement;

    // Auto-verify if token is in URL
    if (token && autoVerifySection) {
        verifyAccount(token)
            .then(() => {
                showSuccessToast(
                    "Account verified successfully! You can now sign in.",
                );
                setTimeout(() => {
                    window.location.href = "/auth/signin";
                }, 1500);
            })
            .catch((error: any) => {
                console.error("Verification error:", error);
                showErrorToast(
                    error.message ||
                        "Verification failed. The token may have expired.",
                );
                // Show manual form
                autoVerifySection.classList.add("hidden");
                verifyForm?.classList.remove("hidden");
            });
    }

    // Manual verification form submission
    verifyForm?.addEventListener("submit", async (e) => {
        e.preventDefault();

        const manualToken = tokenInput?.value;

        if (!manualToken) {
            showErrorToast("Please enter your verification token");
            return;
        }

        // Show loading state
        if (submitBtn) {
            submitBtn.disabled = true;
            btnText.textContent = "Verifying...";
            loadingSpinner?.classList.remove("hidden");
        }

        try {
            await verifyAccount(manualToken);

            showSuccessToast(
                "Account verified successfully! You can now sign in.",
            );

            setTimeout(() => {
                window.location.href = "/auth/signin";
            }, 1500);
        } catch (error: any) {
            console.error("Verification error:", error);
            showErrorToast(
                error.message ||
                    "Verification failed. The token may have expired.",
            );

            // Reset button state
            if (submitBtn) {
                submitBtn.disabled = false;
                btnText.textContent = "Verify Account";
                loadingSpinner?.classList.add("hidden");
            }
        }
    });
</script>

<style>
    input:focus {
        box-shadow: 0 0 0 3px rgba(99, 102, 241, 0.1);
    }

    button[type="submit"]:hover:not(:disabled) {
        transform: translateY(-1px);
        box-shadow: 0 4px 12px rgba(99, 102, 241, 0.3);
    }

    @keyframes spin {
        to {
            transform: rotate(360deg);
        }
    }

    .animate-spin {
        animation: spin 1s linear infinite;
    }
</style>
