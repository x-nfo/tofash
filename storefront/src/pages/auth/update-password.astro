---
/**
 * Update Password Page
 * Password reset page with token-based password update
 */

import BaseLayout from "../../layouts/BaseLayout.astro";
import UpdatePasswordForm from "../../components/auth/UpdatePasswordForm.astro";

// Get token from URL query params
const url = new URL(Astro.request.url);
const token = url.searchParams.get("token") || "";

// Validate token
const hasToken = token.length > 0;
---

<BaseLayout title="Update Password - Tofash">
    <div
        class="min-h-screen flex flex-col justify-center py-12 sm:px-6 lg:px-8 bg-gray-50"
    >
        <div class="sm:mx-auto sm:w-full sm:max-w-md">
            <div class="text-center">
                <div
                    class="mx-auto h-16 w-16 bg-indigo-100 rounded-full flex items-center justify-center mb-4"
                >
                    <svg
                        class="h-8 w-8 text-indigo-600"
                        fill="none"
                        viewBox="0 0 24 24"
                        stroke="currentColor"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M15 7a2 2 0 012 2m4 0a6 6 0 01-7.743 5.743L11 17H9v2H7v2H4a1 1 0 01-1-1v-2.586a1 1 0 01.293-.707l5.964-5.964A6 6 0 1121 9z"
                        ></path>
                    </svg>
                </div>
                <h1 class="text-3xl font-bold text-gray-900">
                    {hasToken ? "Reset Your Password" : "Invalid Reset Link"}
                </h1>
                <p class="mt-2 text-sm text-gray-600">
                    {
                        hasToken
                            ? "Enter your new password below"
                            : "The password reset link is invalid or has expired"
                    }
                </p>
            </div>
        </div>

        <div class="mt-8 sm:mx-auto sm:w-full sm:max-w-md">
            <div class="bg-white py-8 px-4 shadow sm:rounded-lg sm:px-10">
                {
                    hasToken ? (
                        <UpdatePasswordForm token={token} />
                    ) : (
                        <div class="text-center">
                            <p class="text-sm text-gray-600 mb-6">
                                Please request a new password reset link.
                            </p>
                            <a
                                href="/auth/forgot-password"
                                class="inline-flex items-center justify-center px-4 py-2 border border-transparent rounded-lg shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-colors"
                            >
                                Request New Link
                            </a>
                        </div>
                    )
                }

                <div class="mt-6 text-center text-sm text-gray-600">
                    Remember your password?
                    <a
                        href="/auth/signin"
                        class="font-medium text-indigo-600 hover:text-indigo-500 transition-colors"
                    >
                        Sign in
                    </a>
                </div>
            </div>
        </div>
    </div>
</BaseLayout>

<style>
    /* Custom styles for update password page */
</style>
