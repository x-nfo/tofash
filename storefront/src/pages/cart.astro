---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout title="Shopping Cart">
    <div class="bg-white">
        <div
            class="max-w-2xl mx-auto pt-16 pb-24 px-4 sm:px-6 lg:max-w-7xl lg:px-8"
        >
            <h1
                class="text-3xl font-extrabold tracking-tight text-gray-900 sm:text-4xl"
            >
                Shopping Cart
            </h1>

            <div
                class="mt-12 lg:grid lg:grid-cols-12 lg:gap-x-12 lg:items-start lg:col-span-7"
            >
                <section aria-labelledby="cart-heading" class="lg:col-span-12">
                    <h2 id="cart-heading" class="sr-only">
                        Items in your shopping cart
                    </h2>

                    <ul
                        role="list"
                        id="cart-list"
                        class="border-t border-b border-gray-200 divide-y divide-gray-200"
                    >
                        <!-- Cart items will be injected here via JS -->
                        <div
                            class="py-10 text-center text-gray-500"
                            id="empty-cart-msg"
                        >
                            Your cart is empty.
                        </div>
                    </ul>
                </section>

                <!-- Order summary -->
                <section
                    aria-labelledby="summary-heading"
                    class="lg:col-span-12 mt-16 bg-gray-50 rounded-lg px-4 py-6 sm:p-6 lg:p-8 lg:mt-0 lg:col-span-5"
                >
                    <h2
                        id="summary-heading"
                        class="text-lg font-medium text-gray-900"
                    >
                        Order summary
                    </h2>

                    <dl class="mt-6 space-y-4">
                        <div
                            class="flex items-center justify-between border-t border-gray-200 pt-4"
                        >
                            <dt class="text-base font-medium text-gray-900">
                                Order total
                            </dt>
                            <dd
                                class="text-base font-medium text-gray-900"
                                id="order-total"
                            >
                                Rp 0
                            </dd>
                        </div>
                    </dl>

                    <div class="mt-6">
                        <a
                            href="/checkout"
                            id="checkout-btn"
                            class="w-full bg-indigo-600 border border-transparent rounded-md shadow-sm py-3 px-4 text-base font-medium text-white hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-offset-gray-50 focus:ring-indigo-500 flex justify-center items-center"
                        >
                            Checkout
                        </a>
                    </div>
                </section>
            </div>
        </div>
    </div>
</BaseLayout>

<script>
    import { $cart, removeFromCart } from "../lib/store";
    import type { CartItem } from "../types/api";

    const cartListEl = document.getElementById("cart-list");
    const orderTotalEl = document.getElementById("order-total");
    const emptyCartMsg = document.getElementById("empty-cart-msg");
    const checkoutBtn = document.getElementById("checkout-btn");

    function renderCart(cartItems: CartItem[]) {
        if (!cartListEl) return;

        // Clear existing list (except the empty message template if we were cloning, but here we rebuild)
        cartListEl.innerHTML = "";

        if (cartItems.length === 0) {
            cartListEl.appendChild(emptyCartMsg!);
            emptyCartMsg!.style.display = "block";
            if (orderTotalEl) orderTotalEl.textContent = "Rp 0";
            return;
        }

        // Hide empty message if it was detached, but since we cleared innerHTML it's gone unless we saved it.
        // Actually simpler: just re-create HTML.

        let total = 0;

        cartItems.forEach((item, index) => {
            const product = item.product;
            const price = product
                ? product.sale_price > 0
                    ? product.sale_price
                    : product.reguler_price
                : 0;
            const itemTotal = price * item.quantity;
            total += itemTotal;

            const li = document.createElement("li");
            li.className = "flex py-6 sm:py-10";

            li.innerHTML = `
                <div class="flex-shrink-0">
                    <img
                        src="${product?.image || "https://placehold.co/200x200?text=No+Image"}"
                        alt="${product?.product_name}"
                        class="w-24 h-24 rounded-md object-center object-cover sm:w-48 sm:h-48"
                    />
                </div>

                <div class="ml-4 flex-1 flex flex-col justify-between sm:ml-6">
                    <div class="relative pr-9 sm:grid sm:grid-cols-2 sm:gap-x-6 sm:pr-0">
                        <div>
                            <div class="flex justify-between">
                                <h3 class="text-sm">
                                    <a href="/products/${item.product_id}" class="font-medium text-gray-700 hover:text-gray-800">
                                        ${product?.product_name || "Product"}
                                    </a>
                                </h3>
                            </div>
                            <div class="mt-1 flex text-sm">
                                <p class="text-gray-500">${item.color}</p>
                                <p class="ml-4 pl-4 border-l border-gray-200 text-gray-500">${item.size}</p>
                            </div>
                            <p class="mt-1 text-sm font-medium text-gray-900">Rp ${price.toLocaleString()}</p>
                        </div>

                        <div class="mt-4 sm:mt-0 sm:pr-9">
                            <label for="quantity-${index}" class="sr-only">Quantity, ${product?.product_name}</label>
                            <p class="text-gray-500 text-sm">Qty: ${item.quantity}</p>
                            
                            <div class="absolute top-0 right-0">
                                <button type="button" class="remove-btn -m-2 p-2 inline-flex text-gray-400 hover:text-gray-500" data-pid="${item.product_id}" data-size="${item.size}" data-color="${item.color}">
                                    <span class="sr-only">Remove</span>
                                    <!-- Heroicon name: solid/x -->
                                    <svg class="h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                                        <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd" />
                                    </svg>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            `;

            cartListEl.appendChild(li);
        });

        if (orderTotalEl) {
            orderTotalEl.textContent = `Rp ${total.toLocaleString()}`;
        }

        // Attach event listeners to remove buttons
        document.querySelectorAll(".remove-btn").forEach((btn) => {
            btn.addEventListener("click", (e) => {
                const target = e.currentTarget as HTMLElement;
                const pid = parseInt(target.dataset.pid || "0");
                const size = target.dataset.size || "";
                const color = target.dataset.color || "";
                removeFromCart(pid, size, color);
            });
        });
    }

    // Subscribe to store updates
    $cart.subscribe(renderCart);
</script>
