---

<nav
    class="fixed top-0 left-0 w-full bg-white shadow-sm z-50 border-b border-gray-100"
>
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between h-16 items-center">
            <!-- Logo -->
            <div class="flex-shrink-0 flex items-center">
                <a
                    href="/"
                    class="text-2xl font-bold text-indigo-600 tracking-tight"
                    >Tofash.</a
                >
            </div>

            <!-- Menus -->
            <div class="hidden sm:flex space-x-8">
                <a
                    href="/"
                    class="text-gray-500 hover:text-gray-900 px-3 py-2 rounded-md text-sm font-medium transition-colors"
                    >Home</a
                >
                <a
                    href="/products"
                    class="text-gray-500 hover:text-gray-900 px-3 py-2 rounded-md text-sm font-medium transition-colors"
                    >Shop</a
                >
                <a
                    href="/about"
                    class="text-gray-500 hover:text-gray-900 px-3 py-2 rounded-md text-sm font-medium transition-colors"
                    >About</a
                >
            </div>

            <!-- Actions -->
            <div class="flex items-center space-x-4">
                <a
                    href="/cart"
                    class="relative p-2 text-gray-400 hover:text-gray-500 transition-colors"
                >
                    <span class="sr-only">View cart</span>
                    <!-- Heroicon cart -->
                    <svg
                        class="h-6 w-6"
                        fill="none"
                        viewBox="0 0 24 24"
                        stroke="currentColor"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z"
                        ></path>
                    </svg>
                    <!-- Badge would go here -->
                    <span
                        id="cart-badge"
                        class="absolute top-0 right-0 inline-flex items-center justify-center px-2 py-1 text-xs font-bold leading-none text-white transform translate-x-1/2 -translate-y-1/2 bg-red-600 rounded-full hidden"
                    >
                        0
                    </span>
                </a>

                <script>
                    import { $cart } from "../../lib/store";

                    const badge = document.getElementById("cart-badge");

                    $cart.subscribe((cart) => {
                        const count = cart.reduce(
                            (acc, item) => acc + item.quantity,
                            0,
                        );
                        if (badge) {
                            badge.innerText = count.toString();
                            if (count > 0) {
                                badge.classList.remove("hidden");
                            } else {
                                badge.classList.add("hidden");
                            }
                        }
                    });
                </script>
            </div>
            <div id="auth-buttons" class="ml-4">
                <a
                    href="/login"
                    class="text-white bg-indigo-600 hover:bg-indigo-700 px-4 py-2 rounded-md text-sm font-medium transition-colors shadow-sm"
                >
                    Sign In
                </a>
            </div>

            <script>
                import { $user, setUser } from "../../lib/store";

                const authContainer = document.getElementById("auth-buttons");

                $user.subscribe((user) => {
                    if (authContainer) {
                        if (user) {
                            authContainer.innerHTML = `
                                <div class="flex items-center space-x-4">
                                    <span class="text-sm text-gray-700 font-medium">Hi, ${user.name.split(" ")[0]}</span>
                                    <button id="logout-btn" class="text-gray-500 hover:text-gray-900 px-3 py-2 rounded-md text-sm font-medium transition-colors border border-gray-200">
                                        Logout
                                    </button>
                                </div>
                            `;

                            // Re-attach listener since innerHTML wiped it
                            setTimeout(() => {
                                document
                                    .getElementById("logout-btn")
                                    ?.addEventListener("click", () => {
                                        setUser(null);
                                        window.location.href = "/";
                                    });
                            }, 0);
                        } else {
                            authContainer.innerHTML = `
                                <a href="/login" class="text-white bg-indigo-600 hover:bg-indigo-700 px-4 py-2 rounded-md text-sm font-medium transition-colors shadow-sm">
                                    Sign In
                                </a>
                            `;
                        }
                    }
                });
            </script>
        </div>
    </div>
</nav>
