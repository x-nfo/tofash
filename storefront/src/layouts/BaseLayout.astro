---
import Navbar from "../components/shared/Navbar.astro";
import Navbar from "../components/shared/Navbar.astro";
import Footer from "../components/shared/Footer.astro";
import "../styles/global.css";

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Tofash - Premium Fashion Store" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title} | Tofash</title>
	</head>
	<body class="bg-gray-50 text-gray-900 font-sans antialiased">
		<Navbar />
		<main
			class="min-h-screen pt-20 pb-10 px-4 sm:px-6 lg:px-8 max-w-7xl mx-auto"
		>
			<slot />
		</main>
		<Footer />
	</body>
	<script>
		import { api } from "../lib/api";
		import { setUser } from "../lib/store";
		import type { User } from "../types/api";

		// Session Hydration Logic
		async function hydrateSession() {
			// Check if we have an access_token cookie
			const hasToken = document.cookie
				.split(";")
				.some((item) => item.trim().startsWith("access_token="));

			if (hasToken) {
				try {
					console.log("Hydrating session...");
					const response = await api<any>("/profile");
					if (response.data) {
						// ProfileResponse structure is slightly different from User interface
						// We map it here
						const user: User = {
							user_id: response.data.id,
							email: response.data.email,
							name: response.data.name,
							role_name: response.data.role, // ProfileResponse uses 'role' json tag for RoleName
							role: response.data.role,
							access_token: "", // Token is in cookie, optional here
						};
						setUser(user);
						console.log("Session hydrated:", user.name);
					}
				} catch (error) {
					console.error("Failed to hydrate session:", error);
					// If token invalid, maybe clear cookie?
				}
			}
		}

		// Run immediately
		hydrateSession();
	</script>
</html>
